<p id="notice"><%= notice %></p>

<h1>Listing Applications</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Job listing</th>
      <th>Resume</th>
      <th>Cover letter</th>
      <th>Date submitted</th>
      <th>Status</th>
      <th>Contact</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @applications.each do |application| %>
      <tr>
        <td><%= application.user_id %></td>
        <td><%= application.job_listing_id %></td>
        <td><%= application.resume %></td>
        <td><%= application.cover_letter %></td>
        <td><%= application.date_submitted %></td>
        <td><%= application.status %></td>
        <td><%= application.contact %></td>
        <td><%= link_to 'Show', application %></td>
        <td><%= link_to 'Edit', edit_application_path(application) %></td>
        <td><%= link_to 'Destroy', application, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

