<%= simple_nested_form_for @company, :html => { :class => 'form-horizontal' } do |company_form| %>
  <fieldset>
    <legend>Add a company you're interested in</legend>

    <div class="input-field col s12">
      <%= company_form.input :name %>
    </div>

    <div class="input-field col s12">
      <%= company_form.input :url, label: "Website" %>
    </div>

    <div class="input-field col s12">
      <%= company_form.input :description, input_html: {class: "materialize-textarea"} %>
    </div>

    <div class="input-field col s12">
      <%= company_form.input :location %>
    </div>    

    <%= company_form.simple_fields_for :user_interests do |user_interest_form| %>
      <div class="fields">
          <!-- Set the hidden input user id for the new user interest object -->
          <%= user_interest_form.input :user_id, as: :hidden, input_html: { value: current_user.id } %>
          
          <div class="input-field col s12">
            <%= user_interest_form.input :rating, collection: 1..5, label: "Select your interest level (1 being least interested and 5 being most interested)" %>
          </div>
      </div>
    <% end %>

    &nbsp;

    <!-- buttons -->
    <div class="form-actions row">
      <div class="col s12">
        <%= company_form.submit "Submit", class: 'btn cyan lighten-3' %><br><br>
        <div class="button"><%= link_to 'Back', home_path, :class => 'btn cyan lighten-3' %></div>
      </div>
    </div>
  </fieldset>
<% end %>