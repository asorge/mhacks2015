<%= simple_form_for @user, html: { class: 'form-horizontal' } do |f| %>
  <fieldset>
    <legend> <%= controller.action_name.capitalize %> Account </legend>
    <div class="input-field col s6">
      <%= f.input :first_name %>
    </div>
    <div class="input-field col s6">
      <%= f.input :last_name %>
    </div>
    <div class="input-field col s6">
      <%= f.input :username %>
    </div>
    <div class="input-field col s6">
      <%= f.input :email %>
    </div>
    <div class="input-field col s6">
      <%= f.input :password %>
    </div>
    <div class="input-field col s6">
      <%= f.input :password_confirmation %>
    </div>
    <div class="input-field col s6">
      <%= f.input :title, label: "Your current job title" %>
    </div>
    <div class="input-field col s6">
      <%= f.input :phone %>
    </div>
  
    <!-- buttons -->
    <div class="form-actions row">
      <div class="col s12 center">
        <br>
        <%= f.button :submit, "Create my account now!", class: "btn cyan lighten-3" %>
        <br><br>
        <div class="button"><%= link_to 'Cancel', home_path, :class => 'btn cyan lighten-3' %></div>
      </div>
    </div>
  </fieldset>
<% end %>
