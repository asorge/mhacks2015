<script>
getProfileData();
</script>

<%= simple_form_for @user, html: { class: 'form-horizontal' } do |f| %>
  <fieldset>
    <legend> <%= controller.action_name.capitalize %> Account </legend>
    <div class="input-field col s6">
      <%= f.input :first_name, html: { method: :put, id: "firstName" } %>
    </div>
    <div class="input-field col s6">
      <%= f.input :last_name, html: { method: :put, id: "lastName" } %>
    </div>
    <div class="input-field col s6">
      <%= f.input :username, html: { method: :put, id: "username" } %>
    </div>
    <div class="input-field col s6">
      <%= f.input :email, html: { method: :put, id: "email" } %>
    </div>
    <div class="input-field col s6">
      <%= f.input :password %>
    </div>
    <div class="input-field col s6">
      <%= f.input :password_confirmation %>
    </div>
    <div class="input-field col s6">
      <%= f.input :title, label: "Current job title", html: { method: :put, id: "title" } %>
    </div>
    <div class="input-field col s6">
      <%= f.input :phone, html: { method: :put, id: "phone" } %>
    </div>
  
    <!-- buttons -->
    <div class="form-actions row">
      <div class="col s12 center">
        <br>
        <%= f.button :submit, "Submit", class: "btn cyan lighten-3" %>
        <br><br>
        <div class="button"><%= link_to 'Cancel', home_path, :class => 'btn cyan lighten-3' %></div>
      </div>
    </div>
  </fieldset>
<% end %>
