<!-- navigation bar for the home page -->
<nav class="cyan lighten-4">
  <div class="nav-wrapper cyan lighten-4">
    <%# link_to image_tag("breadexpress_title.png"), home_path, :class => "brand-logo left" %> 
    <ul class="right">
      <!-- link to home -->
      <li><%= link_to "Home", home_path %></li>

      <!-- GUEST OPTIONS -->
      <% if !logged_in? %>
    
      <% end %>
      
      <!-- LOGGED IN USER OPTIONS -->
      <% if logged_in? %>
        <!-- dropdown options for my account -->
        <ul id="dropdown1" class="dropdown-content">
          <li><%= link_to "View My Account", user_path(current_user.id) %></li>
          <li><%= link_to "Update My Account", edit_user_path(current_user.id) %></li>
          <li><%= link_to "My Job Applications", applications_path %></li>
          <li><%= link_to "My Companies", companies_path %></li>
        </ul>
        <!-- Dropdown Trigger -->
        <li><a class="dropdown-button" data-activates="dropdown1">My Account<i class="mdi-navigation-arrow-drop-down right"></i></a></li>

        <li><%= link_to "Search", companies_path %></li>
      <% end %>
    </ul>
  </div>
</nav>

<!-- The welcome/log in/sign up bar below the navbar -->
<div id="login">
  <br>
  <% if logged_in? %>
    <!-- only display the user's proper name if it exists in the system -->
    Welcome, <%= current_user.proper_name %>!
  <% else %>
    Welcome, Guest!
  <% end %>
</div>